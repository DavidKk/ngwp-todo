section.main
  span(ng-if="todos.length > 0")
    input.toggle-all(
      type="checkbox",
      ng-checked="$ctrl.completedCount === todos.length")
    label(ng-click="actions.completeAll()")

  ul.todo-list
    todo-item(
      ng-repeat="todo in $ctrl.todos"
      actions="actions"
      todo="todo")

  footer-component(
    ng-if="todos.length"
    actions="actions",
    completed-count="$ctrl.completedCount",
    active-count="$ctrl.activeCount",
    filter="filter",
    on-clear-completed="$ctrl.handleClearCompleted",
    on-show="handleFilter")
